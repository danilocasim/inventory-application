<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Books</title>
  </head>
  <body>
    <% books.forEach((book) => { %>
    <p><%= book.title %></p>
    <form action="/delete/<%= genreId %>/<%= book.id %>" method="POST">
      <button method="DELETE" type="submit">DELETE</button>
    </form>
    <% }) %>
  </body>
</html>
