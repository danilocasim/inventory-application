<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UPDATE BOOK</title>
    <link rel="stylesheet" href="style.css" />
  </head>

  <body>
    <%- include("nav") %>

    <div class="container updateBookContainer">
      <form action="/updateBook" method="POST">
        <%- include("partials/errors.ejs") %>
        <label for="title">Enter the book title:</label>
        <input
          type="text"
          name="title"
          id="title"
          value="<%= book.title %>"
          required
        />
        <label for="genreId">Select Genre</label>
        <select name="genreId" id="genreId" required>
          <option value="" disabled selected>Choose a Genre</option>
          <% genres.forEach((genre) => { %>
          <option <%= (book.bookgenre == genre.id) ? "selected" : "" %> value="<%= genre.id %>"><%= genre.genre %></option>
          <% }) %>
        </select>
      
        <button name="bookId" value="<%= book.id %>" type="submit">Update Book</button>
      </form>
    </div>
  </body>
</html>
